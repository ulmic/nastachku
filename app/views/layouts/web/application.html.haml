!!!
%html{ lang: "ru" }
  %head
    /[if IE] <meta http-equiv='X-UA-Compatible' content='IE=edge,chrome=1'>
    %meta{ content: "width=device-width, initial-scale=1.0", name: "viewport" }
    %title Стачка!
    %link{ href: "/assets/favicon.ico", rel: "icon", type: "image/x-icon" }
    %link{ href: "/assets/favicon.ico", rel: "shortcut icon", type: "image/x-icon" }
    %meta{ charset: "utf-8" }
    %meta{ content: "Digital-коммуникации, Программирование, IT-стартапы, Электронная коммерция, Менеджмент в IT, IT на службе общества", name: "description" }
    %meta{ content: "Главная | Стачка!", name: "keywords" }
    %meta{ content: "Главная | Стачка!", property: "og:title" }
    %meta{ content: "Digital-коммуникации, Программирование, IT-стартапы, Электронная коммерция, Менеджмент в IT, IT на службе общества", property: "og:description" }
    %meta{ content: "Стачка!", property: "og:site_name" }
    - if @lecture_id and @lecture_by_id
      %meta{ content: "#{root_url}#{@lecture_by_id.lector_photo if @lecture_by_id.lector_photo}", property: "og:image" }
      %meta{ content: "455", property: "og:image:width" }
      %meta{ content: "450", property: "og:image:height" }
      %meta{ content: @lecture_by_id.thesises, property: "og:description" }
      %meta{ content: "#{@lecture_by_id.title}(#{@lecture_by_id.lector_name})", property: "og:title" }
      %meta{ content: "#{lectures_url}?lecture_id=#{@lecture_id}", property: "og:url" }
    - else
      %meta{ content: asset_url("web/og_image_2.png"), property: "og:image" }
      %meta{ content: "250", property: "og:image:width" }
      %meta{ content: "250", property: "og:image:height" }
      %meta{ content: "http://nastachku.ru/", property: "og:url" }
    = csrf_meta_tag
    = stylesheet_link_tag "web/application"
    = javascript_include_tag "application"
    = include_gon
    %script{ src: "http://ajax.googleapis.com/ajax/libs/jquery/2.1.0/jquery.min.js", type: "text/javascript" }
  %body
    = render "layouts/web/shared/counters"
    #layout
      = render "layouts/web/shared/header"
      = render "layouts/web/shared/plaha"
      = bootstrap_flash
      = yield
      - unless in_account?
        = render "layouts/web/shared/organizers"
        = render "layouts/web/shared/strategy_partners"
        -# = render "layouts/web/shared/partners"
        -# = render "layouts/web/shared/sponsors"
        -# = render "layouts/web/shared/restoran_partners"
        -# = render "layouts/web/shared/info_partners"
      = render "layouts/web/shared/footer"
    #overlay.overlay
    - unless current_user
      = render "layouts/web/shared/authpopup"
    :javascript
        var _gaq = _gaq || [];
        _gaq.push(['_setAccount', 'UA-47395104-1']);
        _gaq.push(['_trackPageview']);

        (function() {
            var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
            ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
            var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
        })();
