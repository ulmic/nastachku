.page-header
  %h1=t '.title'

%p
  %strong= News.human_attribute_name :slug
  %br
  = @page.slug
%p
  %strong= News.human_attribute_name :title
  %br
  = @page.title
%p
  %strong= News.human_attribute_name :body
  %br
  = @page.body

.form-actions
  = link_to t('.back'), admin_pages_path, :class => 'btn'
  = link_to t('.edit'), edit_admin_page_path(@page), :class => 'btn'
  = link_to t('.destroy'), admin_page_path(@page), :method => "delete", :data => { :confirm => t('.confirm') }, :class => 'btn btn-danger'
